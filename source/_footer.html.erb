<footer id="footer">
  <ul>
    <% unless(current_page.path == "index.html") %>
      <li class="page-nav">
        <% pages = sitemap.resources.find_all{|p| p.source_file.match(/\.html/)}.sort_by {|p| p.url} %>
        <% pages.each_with_index do |p, index| %>
          <% if p.url == current_page.url %>
            <% next_page = pages[index+1]  %>
            <% prev_page = pages[index-1] %>
            <%= link_to("<span>Prev</span>", prev_page.path, :class => "prev") unless index == 1 %>
            <%= link_to("<span>Next</span>", next_page.path, :class => "next") unless index == pages.size - 1 %>
          <% end %>
        <% end %>
      </li>
      <li class="audio">
        <div id="audio-clip">
          <%= javascript_include_tag("/javascripts/classList.js") %>
          <%= javascript_include_tag "/javascripts/iTunesPreviewPlayer.js" %>
          <script>
            var track = "<%= data.page.track %>";
            var playerCountry = "<%= data.page.player_country %>";
            var playerColor = "#<%= data.page.player_color %>";
            var player = new iTunesPreviewPlayer(track);
            var audio = document.getElementsByTagName('audio');
            var isMac = navigator.userAgent.toUpperCase().indexOf('MAC') >= 0;
            var isFirefox = navigator.userAgent.toLowerCase().indexOf('firefox') > -1;
            if(!isFirefox && isMac) {
              document.getElementById("audio-clip").appendChild(player.DOMElement());
            }
          </script>
        </div>
      </li>
      <li>
        <%= link_to "Buy on iTunes", "#{current_page.data.song_link}", :class => "buy-track", :target => "itunes_store"  %>
      </li>
    <% end %>
    <% if(current_page.path == "index.html") %>
      <li><%= link_to("Made by olliekav", "http://olliekav.com", :target => "_blank") %></li>
      <li><%= link_to("About", "/about") %></li>
    <% end %>
    <%= content_tag(:li, link_to("Store", "http://shop.hiphopquoted.com", :target => "_blank")) if store_link? %>
  </ul>
</footer>