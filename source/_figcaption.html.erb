<% include_span ||= false  %>
<figcaption>
  <%= wrap_text('Quote by', include_span) %>
  <%= link_to("#{data.artist}", "#{data.wiki_link}") %>
  <cite>
    <%= wrap_text('from', include_span) %>
    <%= link_to("#{data.song}", "#{data.song_link}&at=11lPxd", :target => "itunes_store") %>
    <%= wrap_text('on the album', include_span) %>
    <%= link_to("#{data.album}", "#{data.album_link}&at=11lPxd", :target => "itunes_store") %>
  </cite>
</figcaption>