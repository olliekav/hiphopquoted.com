<% include_span ||= false  %>
<% fit ||= false  %>
<figcaption>
  <%= wrap_text('Quote by', include_span, fit) %>
  <%= link_to("#{data.artist}", "#{data.wiki_link}", class: fit ? "fit" : "") %>
  <cite>
    <%= wrap_text('from', include_span, fit) %>
    <%= link_to("#{data.song}", "#{data.song_link}&at=11lPxd", target: "itunes_store", class: fit ? "fit" : "") if data.song %>
    <%= wrap_text('on the album', include_span, fit) if data.album %>
    <%= link_to("#{data.album}", "#{data.album_link}&at=11lPxd", target: "itunes_store", class: fit ? "fit" : "") if data.album %>
  </cite>
</figcaption>