<script type="text/javascript" src="//use.typekit.com/<%= font_id %>.js"></script>

<%= javascript_include_tag("bigtext.js") if locals[:include_big_text] %>
<%= javascript_include_tag("jquery.lettering.js") if locals[:include_lettering] %>

<script type="text/javascript">
  try {
  Typekit.load({
    async: true,
    active: function() {
      <%= script if locals[:script] %>
    }
  })
  } catch(e) {}
</script>